<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorOrange">

    <ImageView
        android:id="@+id/iv_mr_clipboard"
        android:layout_width="180dp"
        android:layout_height="350dp"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_mr_clipboard_half_body" />

    <RadioGroup
        android:id="@+id/rg_previous_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_mr_clipboard"
        android:layout_toRightOf="@id/iv_mr_clipboard"
        android:layout_below="@id/tv_question"
        android:layout_above="@id/progress_bar"
        android:layout_toStartOf="@id/bt_next"
        android:orientation="horizontal"
        android:layout_toLeftOf="@id/bt_next">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <br.com.como_voce_mora.ui.custom.CustomRadioButton
                android:id="@+id/rb_1"
                style="@style/CustomRadioButton"
                android:text="0 a 1 ano"
                android:drawableTop="@drawable/um_ano"
                android:gravity="center"
                android:textSize="@dimen/default_text_size" />

            <br.com.como_voce_mora.ui.custom.CustomRadioButton
                android:id="@+id/rb_2"
                style="@style/CustomRadioButton"
                android:text="1 a 2 anos"
                android:drawableTop="@drawable/um_ano_meio"
                android:gravity="center"
                android:textSize="@dimen/default_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <br.com.como_voce_mora.ui.custom.CustomRadioButton
                android:id="@+id/rb_3"
                style="@style/CustomRadioButton"
                android:text="2 a 3 anos"
                android:drawableTop="@drawable/dois_anos_meio"
                android:gravity="center"
                android:textSize="@dimen/default_text_size" />

            <br.com.como_voce_mora.ui.custom.CustomRadioButton
                android:id="@+id/rb_4"
                style="@style/CustomRadioButton"
                android:text="3 a 4 anos"
                android:drawableTop="@drawable/tres_anos_meio"
                android:gravity="center"
                android:textSize="@dimen/default_text_size" />

        </LinearLayout>

        <br.com.como_voce_mora.ui.custom.CustomRadioButton
            android:id="@+id/rb_5"
            style="@style/CustomRadioButton"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="5 anos ou mais"
            android:drawableTop="@drawable/cinco_anos"
            android:gravity="center"
            android:textSize="@dimen/default_text_size" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-30dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="60dp"
        android:text="Qual o tempo de permanÃªncia na moradia anterior?"
        android:layout_toEndOf="@id/iv_mr_clipboard"
        android:layout_toRightOf="@id/iv_mr_clipboard"
        android:background="@drawable/bg_ballon"
        android:gravity="center_vertical"
        android:paddingStart="70dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="70dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/bt_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/colorTransparent"
        android:rotation="180"
        android:scaleType="centerInside"
        android:src="@drawable/ic_next" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/bt_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/colorTransparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_doublenext" />

    <br.com.como_voce_mora.ui.custom.HowYouLiveProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>