<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorBlueLight2">

    <include layout="@layout/fragment_mr_clipboard_ball" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintEnd_toStartOf="@id/bt_next">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Cidade:"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/tvCep"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Cep:"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etCep"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorWhite" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/address"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="EndereÃ§o:"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/tvAp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Apartamento/Bloco:"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorWhite" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvBairro"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Bairro:"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etBairro"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/tvSince"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Desde que ano mora:"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorWhite" />


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/address_please"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>