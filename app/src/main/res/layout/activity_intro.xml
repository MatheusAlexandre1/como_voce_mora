<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueLight"
    android:paddingStart="60dp"
    android:paddingEnd="60dp">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_logo" />

        <Button
            android:id="@+id/bt_continue"
            style="@style/ButtonMenu"
            android:layout_toEndOf="@id/iv_logo"
            android:layout_toRightOf="@id/iv_logo"
            android:text="@string/bt_continue" />

        <Button
            android:id="@+id/bt_start"
            style="@style/ButtonMenu"
            android:layout_below="@id/bt_continue"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@id/iv_logo"
            android:layout_toRightOf="@id/iv_logo"
            android:text="@string/start" />

        <Button
            android:id="@+id/bt_instruction"
            style="@style/ButtonMenu"
            android:layout_below="@id/bt_start"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@id/iv_logo"
            android:layout_toRightOf="@id/iv_logo"
            android:text="@string/instruction" />

        <Button
            android:id="@+id/bt_credit"
            style="@style/ButtonMenu"
            android:layout_below="@id/bt_instruction"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@id/iv_logo"
            android:layout_toRightOf="@id/iv_logo"
            android:text="@string/credit" />

        <Button
            android:id="@+id/bt_send_answers"
            style="@style/ButtonMenu"
            android:layout_below="@id/bt_credit"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@id/iv_logo"
            android:layout_toRightOf="@id/iv_logo"
            android:text="@string/send_answers" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_container"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin">

        <ImageButton
            android:scaleType="center"
            android:background="@android:color/transparent"
            android:id="@+id/ib_sound"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/ic_speaker_off" />

        <ImageView
            android:id="@+id/iv_footer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/ib_sound"
            android:layout_toRightOf="@id/ib_sound"
            android:src="@drawable/bg_footer" />
    </RelativeLayout>

</RelativeLayout>