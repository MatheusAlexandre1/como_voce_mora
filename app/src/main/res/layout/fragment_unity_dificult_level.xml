<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   android:background="@color/colorPink">

    <include layout="@layout/fragment_mr_clipboard_ball" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/image_mr_clipboard_ball"
        android:layout_height="@dimen/image_mr_clipboard_ball"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_mr_clipboard"
        app:layout_constraintEnd_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintTop_toTopOf="@id/llVolume1" />


    <LinearLayout
        android:id="@+id/llVolume1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBege"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_mr_clipboard"
        app:layout_constraintBottom_toBottomOf="@id/bt_next"
        app:layout_constraintStart_toStartOf="@id/tv_question"
        app:layout_constraintEnd_toEndOf="@id/tv_question">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Variar Posição dos Moveis"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack" />


        <br.com.como_voce_mora.custom.VolumeHorizontal
            android:id="@+id/volume1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVolume2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBege"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/llVolume1"
        app:layout_constraintStart_toStartOf="@id/tv_question"
        app:layout_constraintEnd_toEndOf="@id/tv_question">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Variar Posição Eletrodomesticos"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack" />


        <br.com.como_voce_mora.custom.VolumeHorizontal
            android:id="@+id/volume2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVolume3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBege"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/llVolume2"
        app:layout_constraintStart_toStartOf="@id/tv_question"
        app:layout_constraintEnd_toEndOf="@id/tv_question">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Inserir plantas ou flores"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack" />


        <br.com.como_voce_mora.custom.VolumeHorizontal
            android:id="@+id/volume3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVolume4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBege"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/llVolume3"
        app:layout_constraintStart_toStartOf="@id/tv_question"
        app:layout_constraintEnd_toEndOf="@id/tv_question">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Inserir Objetos Pessoais"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack" />


        <br.com.como_voce_mora.custom.VolumeHorizontal
            android:id="@+id/volume4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>