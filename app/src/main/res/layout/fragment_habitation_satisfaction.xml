<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorGrayLight">

    <include layout="@layout/fragment_mr_clipboard_ball" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"
        app:layout_constraintEnd_toStartOf="@id/bt_next">

        <LinearLayout
            android:id="@+id/llVolume1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorBege"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Vaga\n de satisfação"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack" />


            <br.com.como_voce_mora.custom.VolumeHorizontal
                android:id="@+id/volume1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVolume2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_question"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBege"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Hall de\n entrada"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack" />


            <br.com.como_voce_mora.custom.VolumeHorizontal
                android:id="@+id/volume2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingRight="10dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVolume3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_question"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBege"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Elevadores"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack" />


            <br.com.como_voce_mora.custom.VolumeHorizontal
                android:id="@+id/volume3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingRight="10dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVolume4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_question"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBege"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Escadas"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack" />


            <br.com.como_voce_mora.custom.VolumeHorizontal
                android:id="@+id/volume4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingRight="10dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVolume5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_question"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBege"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Hall do\n apartamento"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack" />


            <br.com.como_voce_mora.custom.VolumeHorizontal
                android:id="@+id/volume5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingRight="10dp" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>