<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorPink"
                                                   android:clickable="true"
                                                   android:focusable="true">

    <include layout="@layout/fragment_mr_clipboard_ball" />

    <LinearLayout
        android:layout_marginTop="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/bt_next"
        app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintTop_toTopOf="@id/bt_next"
        app:layout_constraintBottom_toBottomOf="@id/bt_next">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvCasaGerminada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                app:nameItem="@string/casagerminada"
                app:imageItem="@drawable/casa_germinada" />

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvSobrado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                app:nameItem="@string/sobrado"
                app:imageItem="@drawable/casa_sobrado" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvVila"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                app:nameItem="@string/vila"
                app:imageItem="@drawable/casa_casa_de_vila" />

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvTerreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                app:nameItem="@string/terrea"
                app:imageItem="@drawable/casa_terrea" />

        </LinearLayout>

        <br.com.como_voce_mora.custom.CustomSelectedView
            android:id="@+id/csvFundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:nameItem="@string/terrea"
            app:imageItem="@drawable/casa_terrea" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>