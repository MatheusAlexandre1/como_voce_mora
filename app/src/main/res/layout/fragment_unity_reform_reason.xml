<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   android:background="@color/colorPink">

    <include layout="@layout/fragment_mr_clipboard_ball" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"
        app:layout_constraintEnd_toStartOf="@id/bt_next">

        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftContainer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    style="@style/PodiumOptionButton"
                    android:id="@+id/btFirstOption"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Ampliar Comodo"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    style="@style/PodiumOptionButton"
                    android:id="@+id/btThirdOption"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Diminuir Comodo"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    style="@style/PodiumOptionButton"
                    android:id="@+id/btFifthOption"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Melhorar Acabamento"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    style="@style/PodiumOptionButton"
                    android:id="@+id/btSevenOption"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Melhorar Conforto"
                    android:visibility="visible"
                    tools:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightContainer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <Button
                    style="@style/PodiumOptionButton"
                    android:id="@+id/btSecondOption"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Problema Tecnico"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    style="@style/PodiumOptionButton"
                    android:id="@+id/btForthOption"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Eliminar Comodo "
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    style="@style/PodiumOptionButton"
                    android:id="@+id/btSixOption"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Função do Comodo"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    style="@style/PodiumOptionButton"
                    android:id="@+id/btEightOption"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Outros"
                    android:visibility="visible"
                    tools:visibility="visible" />


            </LinearLayout>

        </LinearLayout>

        <br.com.como_voce_mora.custom.CustomPodium
            android:id="@+id/cpPodium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>