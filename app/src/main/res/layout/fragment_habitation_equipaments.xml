<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayLight">

    <include layout="@layout/fragment_mr_clipboard_full" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintEnd_toStartOf="@id/bt_next"
        app:layout_constraintBottom_toTopOf="@id/progress_bar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp">

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvGamesRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:nameItem="@string/games_room"
                app:imageItem="@drawable/game_room" />

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvGym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:nameItem="@string/gym"
                app:imageItem="@drawable/academia" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp">

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvSqaure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:nameItem="@string/quadra"
                app:imageItem="@drawable/quadra" />

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvPartyRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:nameItem="@string/party_room"
                app:imageItem="@drawable/party_room" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp">

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvPoolPlusEighteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:nameItem="@string/piscinapluseighteen"
                app:imageItem="@drawable/adultpool" />

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvChildPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:nameItem="@string/child_pool"
                app:imageItem="@drawable/kids_pool" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp">

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvGourmet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:nameItem="@string/gourment_space"
                app:imageItem="@drawable/gourmet_space" />

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvPlayGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:nameItem="@string/playground"
                app:imageItem="@drawable/playground" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>