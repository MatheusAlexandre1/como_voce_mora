<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorBlueLight2">

    <include layout="@layout/fragment_mr_clipboard_ball" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_goneMarginTop="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintEnd_toStartOf="@id/bt_next">

        <LinearLayout
            android:id="@+id/llVolume1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_question"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBege"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Agradabilidade"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack" />


            <br.com.como_voce_mora.custom.VolumeHorizontal
                android:id="@+id/volume1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llVolume2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_question"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBege"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Relação de \nConvivio"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack" />


            <br.com.como_voce_mora.custom.VolumeHorizontal
                android:id="@+id/volume2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVolume3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_question"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBege"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Acessibilidade\ndas Calçadas"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack" />


            <br.com.como_voce_mora.custom.VolumeHorizontal
                android:id="@+id/volume3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>