<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink">

    <include layout="@layout/fragment_mr_clipboard_full" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"
        app:layout_constraintEnd_toStartOf="@id/bt_next"
        app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintTop_toBottomOf="@id/tv_question">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <br.com.como_voce_mora.custom.CustomRadioButton
                    android:id="@+id/rbAcabamento"
                    style="@style/CustomRadioButton"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:text="Troca de acabamento"
                    app:layout_constraintBottom_toTopOf="@id/rbOther"
                    app:layout_constraintEnd_toStartOf="@id/rbMale"
                    app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
                    app:layout_constraintTop_toBottomOf="@id/tv_question" />

                <br.com.como_voce_mora.custom.CustomRadioButton
                    android:id="@+id/rbPortas"
                    style="@style/CustomRadioButton"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:text="Troca de portas ou janelas"
                    app:layout_constraintBottom_toTopOf="@id/rbOther"
                    app:layout_constraintEnd_toStartOf="@id/rbMale"
                    app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
                    app:layout_constraintTop_toBottomOf="@id/tv_question" />

                <br.com.como_voce_mora.custom.CustomRadioButton
                    android:id="@+id/rbGesso"
                    style="@style/CustomRadioButton"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:text="Colocação de gesso"
                    app:layout_constraintBottom_toTopOf="@id/rbOther"
                    app:layout_constraintEnd_toStartOf="@id/rbMale"
                    app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
                    app:layout_constraintTop_toBottomOf="@id/tv_question" />

                <br.com.como_voce_mora.custom.CustomRadioButton
                    android:id="@+id/rbPintura"
                    style="@style/CustomRadioButton"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:text="Pintura"
                    app:layout_constraintBottom_toTopOf="@id/rbOther"
                    app:layout_constraintEnd_toStartOf="@id/rbMale"
                    app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
                    app:layout_constraintTop_toBottomOf="@id/tv_question" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <br.com.como_voce_mora.custom.CustomRadioButton
                    android:id="@+id/rbArmario"
                    style="@style/CustomRadioButton"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:text="Colocação de armário"
                    app:layout_constraintBottom_toTopOf="@id/rbOther"
                    app:layout_constraintEnd_toStartOf="@id/rbMale"
                    app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
                    app:layout_constraintTop_toBottomOf="@id/tv_question" />

                <br.com.como_voce_mora.custom.CustomRadioButton
                    android:id="@+id/rbParedes"
                    style="@style/CustomRadioButton"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:text="Remoção ou acréscimo de paredes"
                    app:layout_constraintBottom_toTopOf="@id/rbOther"
                    app:layout_constraintEnd_toStartOf="@id/rbMale"
                    app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
                    app:layout_constraintTop_toBottomOf="@id/tv_question" />

                <br.com.como_voce_mora.custom.CustomRadioButton
                    android:id="@+id/rbRachaduras"
                    style="@style/CustomRadioButton"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:text="Reparo de rachaduras ou infiltrações"
                    app:layout_constraintBottom_toTopOf="@id/rbOther"
                    app:layout_constraintEnd_toStartOf="@id/rbMale"
                    app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
                    app:layout_constraintTop_toBottomOf="@id/tv_question" />

                <br.com.como_voce_mora.custom.CustomRadioButton
                    android:id="@+id/rbNenhuma"
                    style="@style/CustomRadioButton"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:text="Nenhuma"
                    app:layout_constraintBottom_toTopOf="@id/rbOther"
                    app:layout_constraintEnd_toStartOf="@id/rbMale"
                    app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
                    app:layout_constraintTop_toBottomOf="@id/tv_question" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>