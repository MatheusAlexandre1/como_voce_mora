<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/selected_size">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/selected_view_image_width"
        android:layout_height="@dimen/selected_view_text_height"
        android:background="@drawable/bg_ballon_normal_type_1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/micro_text_size"
        tools:text="Nome" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/selected_view_image_width"
        android:layout_height="@dimen/selected_view_image_height"
        android:layout_below="@+id/tv_name"
        tools:src="@drawable/um_ano" />

</RelativeLayout>