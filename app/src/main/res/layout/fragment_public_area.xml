<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorBlueLight2">

    <include layout="@layout/fragment_mr_clipboard_ball" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_mr_clipboard"
        app:layout_constraintTop_toTopOf="@id/bt_next"
        app:layout_constraintBottom_toBottomOf="@id/bt_next"
        app:layout_constraintEnd_toStartOf="@id/bt_next">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvPraca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imageItem="@drawable/praca"
                app:nameItem="@string/praÃ§a"
                app:textColor="@color/colorBlack" />

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvParque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                app:imageItem="@drawable/parque"
                app:nameItem="@string/parque"
                app:textColor="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvAcademia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imageItem="@drawable/academia"
                app:nameItem="@string/academia_livre"
                app:textColor="@color/colorBlack" />

            <br.com.como_voce_mora.custom.CustomSelectedView
                android:id="@+id/csvQuadra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                app:imageItem="@drawable/quadra"
                app:nameItem="@string/quadra"
                app:textColor="@color/colorBlack" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>