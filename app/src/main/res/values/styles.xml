<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:background">@drawable/bg_button_menu</item>
        <item name="android:fontFamily">@font/mkm232</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="CustomRadioButtonWithImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="SmallCustomRadioButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:background">@drawable/bg_custom_radio_button</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="SessionBackButton">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:src">@drawable/ic_previous_session</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="HelpButton">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:src">@drawable/ic_help</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
